<main class='inner landing'>
  <h1 class='landing-heading'>Sign Up</h1>
  <br/>
  <div class='lead container'>
    <%= form_for @user do |form| %>
      <div class='form-group'>
        <%= form.text_field :first_name, placeholder: 'First Name' %>
      </div>
      <div class='form-group'>
        <%= form.text_field :last_name, placeholder: 'Last Name'  %>
      </div>
      <div class='form-group'>
        <%= form.text_field :email, placeholder: 'Email' %>
      </div>
      <div class='form-group'>
        <%= form.password_field :password, placeholder: 'Password' %>
      </div>
      <%= form.submit 'Sign Up', class: 'btn btn-secondary'%>
    <% end %>
  </div>
</main>
